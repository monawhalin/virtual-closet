{
  "expo": {
    "name": "Virtual Closet",
    "slug": "virtual-closet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "virtualcloset",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.virtualcloset.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#fafaf9",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.virtualcloset.app"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Virtual Closet to access your photos to add clothing items.",
          "cameraPermission": "Allow Virtual Closet to use the camera to photograph clothing."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Virtual Closet to use the camera to photograph clothing items."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#fafaf9"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
